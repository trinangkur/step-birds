head
  link(rel="stylesheet", href="/css/home.css")
  script(src="/js/home.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.27.0/moment.min.js"
      type="text/javascript")
  include ./commonPart.pug

#content-box()
  #header()
    span HOME
  #tweets-section
    #tweet-bLog
      #tweet-box  
        div
          img.profileIcon(src=image_url
          alt="../assets/profileIcon.png")
        .text-area
          textarea#tweetText2(
          name="name"
          cols="90"
          rows="10"
          placeholder="what's happening..."
          onkeydown="showCharCount('tweetText2','count-indicator2', 'counter2', 'tweet-button')")
      #tweet-blog-elements
        #tweet-button
          button.primary-btn.add-access(onclick="postTweet(2); showCharCount('tweetText2','count-indicator2', 'counter2', 'tweet-button')") Tweet
        .char-count
          svg(height="100%" viewBox="0 0 20 20" width="100%" style="overflow: visible;")
            circle(cx="50%" cy="50%" fill="none" stroke-width="2" r="9" stroke="#E6ECF0")
            circle(cx="50%" cy="50%" fill="none" id="count-indicator2" stroke-width="2" r="9" stroke="#4a61c8"         stroke-linecap="round" style="stroke-dashoffset: 56;stroke-dasharray: 56.5487;")
            text(x="50%" y="50%" text-anchor="middle"              stroke="black" stroke-width="0.1px" dy=".3em" font-size="8px" id="counter2") 180
    #tweets(name=userId)
      #tweet
#right-side-bar
